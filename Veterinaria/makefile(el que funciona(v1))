all: main run

WARNING= -Wall
CC = g++
puntoos = obj/Menu.o obj/VeterinariaAdministration.o obj/Consulta.o obj/Gato.o obj/ListaConsultas.o obj/ListaMascotas.o obj/Mascota.o obj/Perro.o obj/Socio.o obj/DataConsulta.o obj/DataGato.o obj/DataMascota.o obj/DataPerro.o obj/Fecha.o obj/Const.o 

DIR_clases = 2_BusinessLayer/BusinessEntities/Classes
DIR_adm = 2_BusinessLayer/BusinessComponents
DIR_control = 1_PresentationLayer/Controls
DIR_data = Cross-Cutting/DataTypes
DIR_enum = Cross-Cutting/Enums
ODIR = obj

#CCFLAGS_control =  -Wall -Werror -I$(HDIR_control) -g

obj/%.o: $(DIR_clases)/%.cpp $(DIR_clases)/%.h
	$(CC) -c $< -o $@


obj/%.o: $(DIR_adm)/%.cpp $(DIR_adm)/%.h
	$(CC) -c $< -o $@


obj/%.o: $(DIR_control)/%.cpp $(DIR_control)/%.h
	$(CC) -c $< -o $@


obj/%.o: $(DIR_data)/%.cpp $(DIR_data)/%.h
	$(CC) -c $< -o $@


obj/%.o: $(DIR_enum)/%.cpp $(DIR_enum)/%.h
	$(CC) -c $< -o $@


obj/Const.o: Cross-Cutting/Const.h Cross-Cutting/Const.cpp
	g++ -c Cross-Cutting/Const.cpp -o obj/Const.o

main: $(puntoos) main.cpp 
	g++ main.cpp $(puntoos) -o main.o
	
run:
	./main.o

clean: 
	rm $(puntoos) main.o

