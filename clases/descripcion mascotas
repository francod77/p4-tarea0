class Mascota{
	private:
		string nombre;
		Genero genero;
		float peso;
	public:
		float obtenerRacionDiaria();
}

class Gato:public Mascota {
	private:
		TipoPelo tipoPelo;
	public:
		void settipopelo(Tipopelo);
		Tipopelo gettipopelo();
}



class Perro:public Mascota {
	private:
		Raza raza;
		bool vacunaCachorro;
	public:
		Raza getraza();
		bool getvacuna();
		void setraza(Raza);
		void setvacuna(bool);
};
class Consulta{
	private:
		Fecha fechaConsulta;
		string motivo;
	public:
    		fecha get_fechaconsulta();
    		string get_motivocons();
				void setfechaconsulta(fecha);
				void setmotivo(string);
}

class DataMascota{
	private:{
		string nombre;
		Genero genero;
		float peso;
		float racionDiaria;
	}
	public:
		void setnombre(string);
		string getnombre();
		void setgenero(Genero);
		Genero getgenero();
		void setpeso(float);
		void setraciondiaria(float peso, string genero); //la racion diaria se calcula segun el peso y el genero(gato o perro)
		float getpeso();
		float getraciondiaria();

}

class DataPerro:public DataMascota{
private:{
	RazaPerro raza;
	bool vacunaCachorro;
	}
}

class DataGato:public DataMascota{
private:
	TipoPelo tipoPelo;
}

class DataConsulta{
	private:
		fecha fechaConsulta;
		string motivo;
	
}

class Fecha{
	private:
		int dia;
		int mes;
		int anio;
public:
	void setfecha(int,int,int);
	int getdia();
	int getmes();
	int getanio();
}

enum RazaPerro
{
	labrador;
	ovejero;
	bulldog;
	pitbull;
	collie;
	pekines;
	otro;
};

enum Genero
{
	Macho;
	Hembra;
};

enum TipoPelo
{
	Corto;
	Mediano;
	Largo;
};
