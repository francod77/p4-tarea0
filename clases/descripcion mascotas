class Mascota{

	private:{
		string nombre;
		Genero genero;
		float peso;}
	public:
		float obtenerRacionDiaria();
}

class Gato:public Mascota {
	private:
		TipoPelo tipoPelo;
}

class Perro:public Mascota {
	private:{
		Raza raza;
		bool vacunaCachorro;}
}
class Consulta{
	private:{
		fecha fechaConsulta;
		string motivo;}
}

class DataMascota{
private:{
	string nombre;
	Genero genero;
	float peso;
	float racionDiaria;}
}

class DataPerro:public DataMascota{
private:{
	RazaPerro raza;
	bool vacunaCachorro;
	}
}

class DataGato:public DataMascota{
private:
	TipoPelo tipoPelo;
}

class DataConsulta{
	private:{
	fecha fechaConsulta;
	string motivo;
	}
}

class Fecha{
	private:{
		int dia;
		int mes;
		int anio;
	}
}

enum RazaPerro
{
	labrador;
	ovejero;
	bulldog;
	pitbull;
	collie;
	pekines;
	otro;
};

enum Genero
{
	Macho;
	Hembra;
};

enum TipoPelo
{
	Corto;
	Mediano;
	Largo;
};
